{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Statewise arrivals to Australia (2019 to 2021)",
    "width": 800,
    "height": 600,
    "background": "#FBEEE6  ",
    "data": {
      "url": "australia.topojson",
      "format": {"type": "topojson", "feature": "STE_2016_AUST"}
    },
    "transform": [
      {
        "lookup": "properties.STE_NAME16",
        "from": {
          "data": {
            "url": "Arrivals_statewise.csv"
          },
          "key": "State",
          "fields": ["June_2019", "June_2020","June_2021" ]
        }
      }
    ],
    "projection": {"type": "equirectangular"},
    "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 0.8},
    "encoding": {
      "color": {
        "field": "June_2021",
        "title": "Number of arrivals",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
        {"field": "June_2019", "type": "quantitative", "title": "Arrivals in June 2019", "format": ","},
        {"field": "June_2020", "type": "quantitative", "title": "Arrivals in June 2020", "format": ","},
        {"field": "June_2021", "type": "quantitative", "title": "Arrivals in June 2021", "format": ","}    
      ]
    }
  }
