{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Statewise arrivals to Australia (2021)",
    "width": 800,
    "height": 600,
    "projection": {
      "type": "equirectangular"
    },
    "params": [
      {
        "name": "Year_selection",
        "value": 2021,
        "bind": {
          "input": "range",
          "min": 2019,
          "max": 2021,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "data": {
        "url": "Arrivals_statewise2.csv"
    },
    "transform": [
        {
            "lookup": "State",
            "from": {
                "data": {
                "url": "australia.topojson",
                "format": {"type": "topojson", "feature": "name"}
            },
            "key": "properties.STE_NAME16"
        },
        "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
    ],
    "mark": {"type": "geoshape"},
  "encoding": {
    "shape": {
        "field": "geo",
        "type": "geojson"
      },
    "color": {"field": "Number of arrivals", "type": "quantitative"},
    "tooltip": [
      {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
      {"field": "Number of arrivals", "type": "quantitative", "title": "Number of arrivals in the country"}
    ]
  },
  "config": {}
}
