{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "Arrivals to Australia (2018 - 2021)",
    "data": {
    "url": "Arrival_numbers.csv"
    },
    "transform": [
        {
            "calculate": "timeParse(datum['Month_Year'], '%d-%m-%y')",
            "as": "dates"
        }
      ],
    "layer":[ {
      "mark": { 
        "type": "line",
        "point":true
        },
        "encoding": {
        "x": { "field": "dates", "timeUnit":"yearmonth", "type": "ordinal", "title":"Dates"},
        "y": { "field": "Australian Citizen Arrivals", "type": "quantitative", "title": "Arrivals in Australia"},
        "tooltip": [
            {"field": "dates", "type": "temporal", "title": "Arrivals in the month"},
            {"field": "Australian Citizen Arrivals", "type": "quantitative", "title": "Number of Australian Arrivals", "format":","}
        ]
        }},
        {"mark": { 
            "type": "line",
            "point":true
            },
            "encoding": {
            "x": { "field": "dates", "timeUnit":"yearmonth", "type": "ordinal", "title":"Dates"},
            "y": { "field": "Non-Australian Citizen Arrivals", "type": "quantitative", "title": "Arrivals in Australia"},
            "tooltip": [
                {"field": "dates", "type": "temporal", "title": "Arrivals in the month"},
                {"field": "Non-Australian Citizen Arrivals", "type": "quantitative", "title": "Number of Non-Australian Arrivals", "format":","}
            ]
        }}
    ]
}