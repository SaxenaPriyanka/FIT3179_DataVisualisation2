{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "Arrivals to Australia (2018 - 2021)",
    "data": {
    "url": "Arrival_numbers.csv"
    },
    "transform": [
        {
            "calculate": "timeParse(datum['Month_Year'], '%d-%m-%y')",
            "as": "dates"
        }
      ],
    "mark": "line",
    "encoding": {
    "x": { "field": "dates", "timeUnit":"yearmonth", "type": "ordinal", "title":"Dates"},
    "y": { "field": "Australian Citizen Arrivals", "type": "quantitative"},
    "tooltip": [
        {"field": "dates", "type": "ordinal", "title": "Arrival dates"},
        {"field": "Australian Citizen Arrivals", "type": "quantitative", "title": "Arrivals in Australia", "format":","}
    ]
    }
}