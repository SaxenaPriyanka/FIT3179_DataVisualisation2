{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "Arrival_citizenships.csv"
    },
    "width": 650,
    "height": 400,
    "title": "Arrivals to Australia (2018 to 2021)",
    "params": [
      {
        "name": "Citizenship_Selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "TOTAL",
            "Australian Citizen Arrivals",
            "Non-Australian Citizen Arrivals"
          ],
          "labels": [
            "Show All",
            "TOTAL",
            "Australian Citizens",
            "Non-Australian Citizens"
          ],
          "name": "Citizenship Status Selection: "
        }
      }
    ],
    "transform": [  
        {"filter": "datum.arrival_numbers > 0"}, 
        {"filter": "datum.arrival_numbers <= 1183090"},
      {"filter": "Citizenship_Selection == null || datum.symbol == Citizenship_Selection"},
      {
        "calculate": "timeParse(datum['date'], '%d-%m-%y')",
        "as": "date"
    }
    ],
    "layer": [
      {
        "encoding": {
          "x": {"field": "date", "timeUnit":"yearmonth", "type": "ordinal", "title": "Month and Year"},
          "y": {
            "field": "arrival_numbers",
            "type": "quantitative",
            "title": "Number of arrivals in Australia"
          },
          "color": {"field": "symbol", "type": "nominal", "title": "Citizenship Status"},
          "tooltip": [
            {"field": "date", "type": "temporal", "title": "Year"}
          ]
        },
        "layer": [
          {"mark": "line"},
          {
            "selection": {
              "label": {
                "type": "single",
                "nearest": true,
                "on": "mouseover",
                "encodings": ["x"],
                "empty": "none"
              }
            },
            "mark": "point",
            "encoding": {
              "opacity": {
                "condition": {"selection": "label", "value": 1},
                "value": 0
              }
            }
          }
        ]
      },
      {
        "transform": [{"filter": {"selection": "label"}}],
        "layer": [
          {
            "encoding": {
              "text": {"type": "quantitative", "field": "arrival_numbers"},
              "x": {"type": "temporal", "field": "date"},
              "y": {"type": "quantitative", "field": "arrival_numbers"}
            },
            "layer": [
              {
                "mark": {
                  "type": "text",
                  "align": "left",
                  "dx": 5,
                  "dy": -5
                }
              },
              {
                "mark": {"type": "text", "align": "left", "dx": 5, "dy": -5},
                "encoding": {"color": {"type": "nominal", "field": "symbol"}}
              }
            ]
          }
        ]
      }
    ],
    "config": {
      "axis": {
        "domainWidth": 1,
        "domainColor": "black",
        "tickColor": "black",
        "labelColor": "black",
        "grid": true,
        "titleColor": "black"
      },
      "view": {"stroke": "transparent"},
      "legend": {"labelColor": "black", "titleColor": "black"}
    }
  }


